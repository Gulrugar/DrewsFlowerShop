{{ 'section-announcement-bar.css' | asset_url | stylesheet_tag }}

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'announcement' %}
    <div class="announcement-bar {{ block.settings.text_alignment }}" {{ block.shopify_attributes }}>
      {{ block.settings.text | escape }}

      {% if block.settings.link_text != blank %}
        <a href="{{ block.settings.link }}" class="animate-arrow">{{ block.settings.link_text }}{% render 'icon-arrow' %}</a>
      {% endif %}
    </div>
  {% endcase %}
{% endfor %}


{% schema %}
  {
    "name": "Announcement Bar",
    "max_blocks": 3,
    "blocks": [
      {
        "type": "announcement",
        "name": "Announcement",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "default": "Save 15% Sitewide | Code 050 Applied",
            "label": "Write your announcement here"
          },
          {
            "type": "select",
            "id": "text_alignment",
            "options": [
              {
                "value": "left",
                "label": "Left"
              }, {
                "value": "center",
                "label": "Center"
              }, {
                "value": "right",
                "label": "Right"
              }
            ],
            "default": "center",
            "label": "Text Alignment"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Link Text"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"

          }
        ]
      }
    ],
    "default": {
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  }
{% endschema %}