{
  "sections": {
    "main": {
      "type": "testing-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "price": {
          "type": "price"
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector"
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true
          }
        }
      },
      "block_order": ["vendor", "price", "variant_picker", "quantity_selector", "buy_buttons"],
      "settings": {
        "enable_sticky_info": true,
        "media_size": "medium",
        "constrain_to_viewport": false,
        "media_fit": "contain",
        "gallery_layout": "thumbnail",
        "media_position": "left",
        "image_zoom": "lightbox",
        "mobile_thumbnails": "show",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 12
      }
    }
  },
  "order": ["main"]
}